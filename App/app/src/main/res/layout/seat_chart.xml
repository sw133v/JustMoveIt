                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/B02"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/seat_button"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

